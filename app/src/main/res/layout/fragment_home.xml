<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager_portadas"
                android:layout_width="match_parent"
                android:layout_height="237dp">
            </androidx.viewpager.widget.ViewPager>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_dots"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#eeeeee"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:textAlignment="center"
                android:background="#1976d2"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESTACADOS"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_destacados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:background="#1976d2"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MÁS VENDIDOS"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_ventas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:background="#1976d2"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="FAVORITOS"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_novedades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:background="#1976d2"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SERVICIOS"/>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/medicos"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <ImageView
                    android:src="@drawable/presion"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <ImageView
                    android:src="@drawable/curacion"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <ImageView
                    android:src="@drawable/azucar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <ImageView
                    android:src="@drawable/aplicacion"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:text="Consultorio\nmédico"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Toma de \npresión"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Curación"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Medición de\nglucosa"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Aplicaciones"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:background="#1976d2"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="REDES SOCIALES"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/btn_facebook"
                    android:contentDescription="Face"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/facebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <ImageView
                    android:id="@+id/btn_whatsapp"
                    android:contentDescription="Face"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/whatsapp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"/>
                <ImageView
                    android:id="@+id/btn_web"
                    android:contentDescription="Face"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/web"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>